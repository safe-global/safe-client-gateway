{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "roots": ["./src"],
  "setupFiles": ["<rootDir>/test/e2e-setup.ts"],
  "testEnvironment": "node",
  "testRegex": [".*\\.spec\\.ts$", ".*\\e2e-spec\\.ts$"],
  "testTimeout": 20000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "moduleNameMapper": {
    "^@/abis/(.*)$": "<rootDir>/abis/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "globalSetup": "<rootDir>/test/global-setup.ts"
}
